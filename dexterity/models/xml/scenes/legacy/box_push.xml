<mujoco model="box_push">
<!-- Copyright (c) 2023 Boston Dynamics AI Institute LLC. All rights reserved. -->
  <option timestep="0.01" />
  <asset>
    <texture name="blue_grid" type="2d" builtin="checker" rgb1=".02 .14 .44" rgb2=".27 .55 1" width="300" height="300" mark="edge" markrgb="1 1 1"/>
    <material name="blue_grid" texture="blue_grid" texrepeat="1 1" texuniform="true" reflectance=".2"/>
  </asset>

  <default>
    <default class="slider">
      <position kp="10" ctrlrange="-10 10"/>
    </default>
    <!-- <geom margin="10.0" gap="10.0"/> -->
  </default>

  <worldbody>
    <body name="ground">
      <geom mass="0" name="ground" pos="0 0 -1" condim="3" size="10.0 10.0 0.10" rgba="0 1 1 1" type="box" material="blue_grid"/>
    </body>

    <body name="object" pos="0 0 0">
      <joint name="slider_object" damping="1" type="slide" axis="1 0 0" />
      <geom name="object" type="box" size="0.25 0.1 0.1" mass="1" rgba=".1 .5 .5 1"/>
      <!-- <geom name="object" type="sphere" size="0.25" mass="1" rgba=".1 .5 .5 1"/> -->
      <site pos="0 0 0" name="site_object"/>
    </body>

    <body name="cart" pos="0 0 0">
      <joint name="slider" damping="1" type="slide" axis="1 0 0" />
      <geom name="cart" type="box" size="0.25 0.1 0.1" mass="1" rgba=".9 .5 .5 1"/>
      <!-- <geom name="cart" type="sphere" size="0.25" mass="1" rgba=".9 .5 .5 1"/> -->
      <site pos="0 0 0" name="site_cart"/>
    </body>
  </worldbody>

  <contact>
    <exclude body1="object" body2="ground"/>
    <exclude body1="cart" body2="ground"/>
  </contact>

  <sensor>
    <framepos objtype="site" objname="site_cart" reftype="site" refname="site_object"/>
  </sensor>
  <actuator>
    <position name="actuator_cart" joint="slider" class="slider" />
  </actuator>
</mujoco>
